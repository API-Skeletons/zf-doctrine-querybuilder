<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./test/Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="orm">
            <file>./test/ORMFilterTest.php</file>
        </testsuite>
        <testsuite name="odm">
            <file>./test/ODMFilterTest.php</file>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>.</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./test</directory>
                <file>./config/module.config.php</file>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="test/code-coverage" charset="UTF-8" yui="true" lowUpperBound="35" highLowerBound="70" />
        <log type="coverage-clover" target="test/build/logs/clover.xml"/>
    </logging>
</phpunit>
